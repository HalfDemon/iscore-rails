<h1>Listing sites</h1>

<table class="table table-bordered">
  <tr>
    <th colspan="1">#</th>
    <th>Name</th>
    <th>Points</th>
    <th>Organization</th>
    <th></th>
    <th></th>
  </tr>

<% @sites.each do |site| %>
  <tr>
    <td><%= @sites.index(site) + 1 %></td>
    <td><%= link_to "Site #{site.number}: #{site.name}", site %></td>
    <td><%= site.points %></td>
    <td><%= link_to raw('<i class="icon-edit"></i> Edit'), edit_site_path(site), class: 'btn btn-primary' %></td>
    <td><%= link_to raw('<i class="icon-warning-sign"></i> Destroy'), site, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to raw('<i class="icon-plus-sign"></i> New Site'), new_site_path, class: 'btn btn-success' %>
