<h1>Listing flags</h1>

<table>
  <tr>
    <th>Content</th>
    <th>Site</th>
    <th>Captured</th>
    <th>Captured flag</th>
    <th>Earned back points</th>
    <th>Earned back</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @flags.each do |flag| %>
  <tr>
    <td><%= flag.content %></td>
    <td><%= flag.site %></td>
    <td><%= flag.captured %></td>
    <td><%= flag.captured_flag %></td>
    <td><%= flag.earned_back_points %></td>
    <td><%= flag.earned_back %></td>
    <td><%= link_to 'Show', flag %></td>
    <td><%= link_to 'Edit', edit_flag_path(flag) %></td>
    <td><%= link_to 'Destroy', flag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

