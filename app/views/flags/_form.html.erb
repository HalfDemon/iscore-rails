<%= simple_form_for(@flag) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <%= f.input :content %>

    <%= f.association :site %>

    <%= f.input :captured %>

    <%= f.input :captured_flag %>

    <%= f.input :earned_back_points %>

    <%= f.input :earned_back %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
